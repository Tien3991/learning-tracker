<ListScreen>:
    name: "list"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Learning Tracker"
            elevation: 2
            right_action_items: [["filter-variant", lambda x: root.show_type_filter()]]

        MDTabs:
            id: tabs
            on_tab_switch: root.on_tab_switch(*args)

            Tab:
                id: tab_active
                title: "Active"
            Tab:
                id: tab_waitlist
                title: "Waitlist"
            Tab:
                id: tab_abandoned
                title: "Abandoned"

        ScrollView:
            MDList:
                id: item_list
                padding: "8dp"
                spacing: "8dp"

    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {"center_x": 0.9, "center_y": 0.08}
        on_release: app.go_to_add_item()
        md_bg_color: app.theme_cls.primary_color
